<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="mViewModel"
            type="com.app.eho.ui.modules.navigatedrawer.drawer.home.HomeViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MapsActivity">
<!--
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">-->

        <com.google.android.gms.maps.MapView
            android:id="@+id/map"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="43dp" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="@dimen/_30ssp"
            android:layout_height="@dimen/_30ssp"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="354dp"
            android:layout_marginTop="353dp"
            android:scaleType="fitCenter"
            android:src="@drawable/map_pin_ic"
            app:layout_constraintBottom_toBottomOf="@+id/map"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/map"
            app:layout_constraintStart_toStartOf="@+id/map"
            app:layout_constraintTop_toTopOf="@+id/map" />
          <!--  <Button
                android:id="@+id/btn_next"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="@dimen/_10ssp"
                android:layout_marginRight="@dimen/_10ssp"
                android:background="@color/app_theme_light_color"
                android:text="@string/map_confirm_pick_up" />-->

     <!--   </RelativeLayout>-->

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="50dp"
            android:paddingBottom="16dp"
            android:layout_marginEnd="12dp"
            android:background="@android:color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/pickUpIndicator"
                android:layout_width="9dp"
                android:layout_height="9dp"
                android:layout_marginStart="16dp"
                android:background="@drawable/bg_circle_black"
                app:layout_constraintBottom_toBottomOf="@+id/pickUpTextView"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/pickUpTextView" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/pickUpTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:background="@color/light_grey"
                android:ellipsize="end"
                android:hint="@string/pickup_location"
                android:paddingStart="8dp"
                android:paddingTop="6dp"
                android:paddingEnd="8dp"
                android:paddingBottom="6dp"
                android:singleLine="true"
                android:textColor="@android:color/black"
                android:textColorHint="@android:color/darker_gray"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/pickUpIndicator"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="1dp"
                android:layout_height="0dp"
                android:background="@android:color/black"
                app:layout_constraintBottom_toTopOf="@+id/dropIndicator"
                app:layout_constraintEnd_toEndOf="@+id/pickUpIndicator"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="@+id/pickUpIndicator"
                app:layout_constraintTop_toBottomOf="@+id/pickUpIndicator" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/dropIndicator"
                android:layout_width="9dp"
                android:layout_height="9dp"
                android:layout_marginStart="16dp"
                android:background="@android:color/black"
                app:layout_constraintBottom_toBottomOf="@+id/dropTextView"
                app:layout_constraintStart_toStartOf="parent"
                android:visibility="gone"
                app:layout_constraintTop_toTopOf="@+id/dropTextView" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/dropTextView"
                android:visibility="gone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:background="@color/light_grey"
                android:ellipsize="end"
                android:hint="@string/where_to"
                android:paddingStart="8dp"
                android:paddingTop="6dp"
                android:paddingEnd="8dp"
                android:paddingBottom="6dp"
                android:singleLine="true"
                android:textColor="@android:color/black"
                android:textColorHint="@android:color/darker_gray"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/dropIndicator"
                app:layout_constraintTop_toBottomOf="@+id/pickUpTextView" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/tv_alert_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#EBF2F5"
            android:gravity="center"
            android:paddingBottom="@dimen/_7ssp"
            android:layout_marginStart="@dimen/_1ssp"
            android:layout_marginEnd="@dimen/_1ssp"
            android:paddingEnd="@dimen/_25sdp"
            android:paddingTop="@dimen/_7ssp"
            android:text="@string/map_pick_up_label"
            android:textColor="@color/black"
            app:layout_constraintBottom_toTopOf="@id/constraint_bottom" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraint_bottom"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_1ssp"
            android:layout_marginEnd="@dimen/_1ssp"
            android:layout_marginStart="@dimen/_1ssp"
            android:background="@color/white"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/map"
            app:layout_constraintStart_toStartOf="@+id/map">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraint_confirm_add"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_10ssp"
                android:background="@color/white"
                android:paddingTop="@dimen/_15ssp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_confirm_pickup_add"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_10ssp"
                    android:layout_marginEnd="@dimen/_10ssp"
                    android:layout_marginStart="@dimen/_10ssp"
                    android:background="@color/app_theme_light_color"
                    android:drawableEnd="@drawable/ic_arrow_white"
                    android:paddingEnd="@dimen/_20ssp"
                    android:text="@string/confirm_from_ambulance"
                    android:textColor="@color/white"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyleview_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxHeight="@dimen/_500sdp"
                    app:layout_constraintBottom_toTopOf="@+id/btn_confirm_pickup_add"
                    tools:itemCount="3"
                    tools:listitem="@layout/item_ambulance" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constrain_address"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_1ssp"
                android:layout_marginStart="@dimen/_1ssp"
                android:background="@color/white"
                android:paddingTop="@dimen/_15ssp"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_pin"
                    app:layout_constraintStart_toStartOf="@+id/btn_pickup"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_goneMarginTop="@dimen/_7ssp" />

                <TextView
                    android:id="@+id/tv_address"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="test "
                    android:textColor="@color/black"
                    android:layout_marginBottom="@dimen/_20sdp"
                    app:layout_constraintBottom_toTopOf="@+id/btn_pickup"
                    app:layout_constraintEnd_toStartOf="@+id/btn_change_location"
                    app:layout_constraintStart_toEndOf="@+id/imageView2"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_change_location"
                    android:layout_width="@dimen/_80ssp"
                    android:layout_height="@dimen/_33ssp"
                    android:text="@string/search"
                    android:textAllCaps="false"
                    android:visibility="gone"
                    app:layout_constraintBottom_toTopOf="@+id/btn_pickup"
                    app:layout_constraintEnd_toEndOf="@+id/btn_pickup"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_pickup"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_1ssp"
                    android:layout_marginEnd="@dimen/_10ssp"
                    android:layout_marginStart="@dimen/_10ssp"
                    android:background="@color/app_theme_light_color"
                    android:text="@string/map_confirm_pick_up"
                    android:textColor="@color/white"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
           <!-- <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraint_search_ambulance"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
